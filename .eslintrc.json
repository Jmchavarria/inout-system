{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["react", "@typescript-eslint", "prettier", "react-hooks"],
  "rules": {
    // ✅ solo prohibimos imports relativos a styles, no TODO el padre
    "no-restricted-imports": [
      "error",
      {
        "patterns": ["../styles/*"]
      }
    ],

    "react/react-in-jsx-scope": "off",

    // ⚠️ baja a warning para no romper build por comillas/; etc.
    "prettier/prettier": [
      "warn",
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "semi": true
      }
    ],

    // ⚠️ warning con excepción para warn/error
    "no-console": ["warn", { "allow": ["warn", "error"] }],

    // ⚠️ quita la obligación global de function expressions (te rompe en TSX)
    "func-style": "off",

    // Menos fricción con TS mientras limpias
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      { "argsIgnorePattern": "^_", "varsIgnorePattern": "^_" }
    ],

    // Preferencias de React (en warning)
    "react/function-component-definition": [
      "warn",
      { "namedComponents": "arrow-function" }
    ],
    "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }],
    "react/no-unused-prop-types": "warn",

    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",

    // Reglas de estilo lógicas (en warning)
    "prefer-destructuring": "warn",
    "no-nested-ternary": "warn",
    "arrow-body-style": ["warn", "as-needed"],
    "prefer-arrow-callback": "warn",

    // Reglas lógicas (deja estas)
    "eqeqeq": "error",
    "complexity": ["warn", 10]
  },

  // En páginas, Next necesita default exports; evita conflictos aquí.
  "overrides": [
    {
      "files": ["pages/**/*.{ts,tsx}"],
      "rules": {
        "react/function-component-definition": "off"
      }
    }
  ]
}
